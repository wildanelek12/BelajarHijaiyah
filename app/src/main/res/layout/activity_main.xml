<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF4ED"
    android:padding="@dimen/_20sdp"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Halo"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="Selamat datang di Aplikasi belajar hijaiyah"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imgHurufHijaiyah"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/menu_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Sambung Huruf"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/imgSambungHuruf"
        app:layout_constraintStart_toStartOf="@+id/imgSambungHuruf"
        app:layout_constraintTop_toBottomOf="@+id/imgHurufHijaiyah" />


    <ImageView
        android:id="@+id/imgSambungHuruf"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/menu_2"
        app:layout_constraintBottom_toBottomOf="@+id/imgHurufHijaiyah"
        app:layout_constraintEnd_toStartOf="@+id/imgPecahHuruf"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgHurufHijaiyah"
        app:layout_constraintTop_toTopOf="@+id/imgHurufHijaiyah"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Huruf Hijaiyah"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/imgHurufHijaiyah"
        app:layout_constraintStart_toStartOf="@+id/imgHurufHijaiyah"
        app:layout_constraintTop_toBottomOf="@+id/imgHurufHijaiyah" />

    <ImageView
        android:id="@+id/imgPecahHuruf"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/menu_3"
        app:layout_constraintBottom_toBottomOf="@+id/imgSambungHuruf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgSambungHuruf"
        app:layout_constraintTop_toTopOf="@+id/imgSambungHuruf" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Pecah Huruf"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/imgPecahHuruf"
        app:layout_constraintStart_toStartOf="@+id/imgPecahHuruf"
        app:layout_constraintTop_toBottomOf="@+id/imgHurufHijaiyah" />

</androidx.constraintlayout.widget.ConstraintLayout>